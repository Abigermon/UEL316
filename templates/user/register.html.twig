{% extends 'base.html.twig' %}

{% block body %}
<br>
    <form method="post" class="neumorphic-form">
        <h3>Inscription</h3>

        {{ form_start(registrationForm) }}

        <div class="input-group">
            {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
        </div>
        <div class="input-group">
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
        </div>
        <div class="input-group">
            {{ form_widget(registrationForm.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
        </div>

        <button type="submit" class="neumorphic-btn">S'inscrire</button><br>

        {{ form_end(registrationForm) }}
    </form>
    <div class="d-flex justify-content-center">
        <a href="{{ path('app_login') }}" class="fst-italic">Vous avez déjà un compte ?</a>
    </div>
{% endblock %}

