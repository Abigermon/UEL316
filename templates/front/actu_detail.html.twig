{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <!-- Titre et tags -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">{{ post.title }}</h1>
        {% if post.tag|length > 0 %}
            <div>
                {% for tag in post.tag %}
                    <span class="badge bg-warning text-dark me-1">
                        {{ tag.name }}
                    </span>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <!-- Image -->
    {% if post.image %}
        <img src="{{ asset(post.image) }}" alt="{{ post.title }}" class="img-fluid object-fit-cover rounded mb-4" style="max-height: 400px; width: 100%;">
    {% endif %}

    <!-- Contenu de l'article -->
    <div class="content-text">
        <p class="text-muted">{{ post.createdAt|date('d/M/Y H:i') }}</p>
        <div class="border-bottom pb-3 mb-4">
            {{ post.content|raw }}
        </div>
    </div>

    <!-- Section des commentaires -->
    <div class="mt-5">
        <h3 class="mb-4 text-primary">Commentaires</h3>

        <!-- Affichage des commentaires existants -->
        {% if post.comments|length > 0 %}
            <div class="list-group mb-4">
                {% for comment in post.comments %}
                    {% if comment.isValid %}
                         <div class="card p-3 mb-3 position-relative">
                                <div>
                                    <small class="text-muted">{{ comment.createdAt|date('d/M/Y H:i') }}</small>
                                </div>
                                <p>{{ comment.content }}</p>

                                <!-- Bouton Signaler avec une classe sp√©cifique -->
                                <a href="{{ path('app_front_report_comment', { 'id': comment.id }) }}" 
                                class="btn btn-danger btn-sm position-absolute bottom-0 end-0 mb-2 me-2" style="font-size: 1rem; padding: 5px 10px;">
                                    üö® Signaler
                                </a>
                            </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <strong>‚ö†Ô∏è Ce commentaire a √©t√© signal√© et est en attente de validation.</strong>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Aucun commentaire pour l'instant. Soyez le premier √† r√©agir !</p>
        {% endif %}

        <div class="card shadow-sm p-4">
            <h4 class="mb-3 text-primary">Laissez un commentaire</h4>
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.content, 'Votre commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': '√âcrivez votre message ici...'}}) }}
                {{ form_errors(form.content) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">Envoyer</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
